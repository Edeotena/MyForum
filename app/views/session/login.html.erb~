<% if flash[:warning] %>
  <div class="alert alert-warning" role="alert" style="width: fit-content">
    <%= flash[:warning] %>
  </div>
<% end %>

<h1>Welcome page</h1>

<h3>Please login to get access to forum</h3>

<% if signed_in? %>
  <h4 class="alert alert-info" style="width: fit-content">You are logged in as <i><%= @current_user.name %></i></h4>
<% end %>

<%= form_with url: session_create_url do |form| %>
  <%= form.label :user, "User" %> <br>
  <%= form.text_field :user, placeholder: 'user', required: true %> <br> <br>
  <%= form.label :password %> <br>
  <%= form.password_field :password, placeholder: '1234', required: true %> <br> <br>
  <%= form.submit 'Log in', class:'btn btn-outline-primary'%>
<% end %>

<br>

<% if !signed_in? %>
  <%= link_to 'Sign in', new_user_path, class: 'btn btn-outline-success' %>
  <br>
<% else %>
  <%= link_to 'Log out', session_logout_path, class:'btn btn-outline-warning' %>
  <br> <br>
  <h5><%= link_to 'Back to forum'%></h5>
<% end %>

<br>

<h5><%= link_to 'Known users list', users_path %></h5>
