<p style="color: green"><%= notice %></p>

<%= link_to 'Create new post', new_post_path, class: "btn btn-outline-success btn-lg" %>&nbsp&nbsp&nbsp
<%= link_to 'Users list', users_path, class: 'btn btn-outline-success btn-lg' %>
<br><br>


<% @posts.each do |post| %>
  <div class="card text-white bg-dark mb-3">
    <div class="card-header">
      <h3>Title: <small class="text-muted"> <%= post.title %> </small></h3>
    </div>
    <div class="card-body">
      <h3>Description: <small class="text-muted"> <%= post.content %> </small></h3> <br>
    </div>
    <div class="card-footer">
      <h5>Created by: <small class="text-muted"> <%= post.author %></small>, Updated at: <small class="text-muted"> <%= post.updated_at %> </small></h5>
      <a href="/posts/<%= post.id %>" class="stretched-link"></a>
    </div>
  </div>
  <br>
<% end %>
