<div class="card text-white bg-dark mb-3">
  <div class="card-header">
    <h3>Title: <small class="text-muted"> <%= @post.title %> </small></h3>
  </div>
  <div class="card-body">
    <h3>Description: <small class="text-muted"> <%= @post.content %> </small></h3> <br>
  </div>
  <div class="card-footer">
    <h5>Created by: <small class="text-muted"> <%= @post.author %></small>, Updated at:
      <small class="text-muted"> <%= @post.updated_at %> </small></h5>
  </div>
</div>

<% if @current_user&.name == @post.user_id %>
  <%= link_to 'Edit post', edit_post_path(@post), class: 'btn btn-outline-primary' %>
  <%= link_to 'Delete post', post_path(@post), method: :delete, class: 'btn btn-outline-danger' %>
<% end %>
<%= link_to 'Back to forum', posts_path, class: 'btn btn-outline-warning' %>
<%= link_to 'New comment', new_comment_url, class: 'btn btn-outline-warning' %>

<div class="card text-white bg-dark mb-3">
  <h1 class="card-header">Comments:</h1>
  <% comments = Comment.all %>
  <% comments.each do |comment| %>
    <% if comment.post_id == @post.id %>
      <div class="card text-white bg-dark mb-3">
        <%= comment.content %>
      </div>
    <% end %>
  <% end %>
</div>

<% cookies[:post] = {:value => @post.id.to_json, :expires => 10.days.from_now } %>
